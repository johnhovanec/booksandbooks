extends ../layout

block content
  .col-sm-8.mainContent
    //h3 #{book.title}
    .row
      div.detailImage
        //- a(href="#")
        img(height='350px' src="/art/" + book.imgPath)
      div.detailContent
        p #[span(class='metaField') _id:] #{book._id}
        p #[span(class='metaField') Title:] #{book.title}
        p #[span(class='metaField') ISBN:] #{book.ISBN}
        p #[span(class='metaField') Author:] #{book.authorFName} #{book.authorLName}
        p #[span(class='metaField') Publisher:] #{book.publisher}
        //li #[span(class='metaField') Format:] #{book.publisher}
        p #[span(class='metaField') Price:] #[span(class='metaFieldPrice') #{book.price}]

        form.form-horizontal(id='addToCart', method='POST') 
        input(type='hidden', name='_csrf', value=_csrf)
        input(type='hidden', name='book_id', value='#{book._id}')
        .form-group
          label.col-sm-1.control-label.bookDetailQty(for='quantity') Quantity:
          .col-sm-1
            input.form-control(type='quantity', name='quantity', id='quantity', placeholder='1', required)
          .form-group
            .col-sm-3
              button.btn.btn-success(type='submit')
                i.fa.fa-check
                | Add To Cart
        br
        br       
        p #{book.blurb}
      
